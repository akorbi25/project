<p id="notice"><%= notice %></p>

<h2>Jobs</h2>
<%if @jobs.empty?%>
<p>There are no jobs </p>
<%else%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

