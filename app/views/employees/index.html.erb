<p id="notice"><%= notice %></p>

<h2>Employees</h2>
<%if @employees && @employees.empty?%>
<p> There are no employees</p>
<%else%>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Ssn</th>
      <th>Date of Birth</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @employees && current_user.employee.role == "manager" or current_user.employee.role == "admin" %>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.ssn %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.role %></td>
        <td><%= employee.active %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%else%>
      <tr>
        <td><%= @employee.first_name %></td>
        <td><%= @employee.last_name %></td>
        <td><%= @employee.ssn %></td>
        <td><%= @employee.date_of_birth %></td>
        <td><%= @employee.phone %></td>
        <td><%= @employee.role %></td>
        <td><%= @employee.active %></td>
        <td><%= link_to 'Edit', edit_employee_path(@employee) %></td>
      </tr>
  <% end %>

  </tbody>
</table>
<%end%>
<br>

